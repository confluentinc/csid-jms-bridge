---
import { Icon } from 'astro-icon'
import { SiteMetadata } from '../config'
import { Image } from '@astrojs/image/components'

import Logo from '../images/svg/confluentinc/logo.svg'
---

<div class="h-24 lg:h-16"></div>
<footer class="text-gray-600 dark:text-gray-400">
  <div
    class="fixed z-20 bottom-0 inset-x-0 bg-gray-100 dark:bg-gray-800 px-4 lg:px-8 py-1 lg:py-4 w-full flex items-center lg:flex-row flex-col border-t-2 border-sky-300 dark:border-sky-600"
  >
    <span class="flex-none flex flex-row items-center">
      <a
        class="flex title-font font-medium items-center lg:justify-start justify-center text-gray-900 dark:text:gray-100"
        href={import.meta.env.BASE_URL}
      >
        <!-- <Image
          src={Logo}
          alt="Footer Logo"
          class="dark:bg-gray-100 h-6 w-6"
          format="svg"
        /> -->
        <span class="sr-only">Logo</span>
      </a>
    </span>
    <span class="flex-none flex flex-row items-center"> </span>
    <span
      class="grow inline-flex lg:ml-auto justify-center lg:justify-end mt-2 lg:mt-0"
    >
      {
        SiteMetadata.social.map(s =>
          s.link ? (
            <a
              href={s.link}
              class="ml-3 text-sky-600 hover:text-pink-600 dark:text-sky-300 dark:hover:text-pink-300"
              rel="noopener noreferrer"
              target="_blank"
            >
              {' '}
              <Icon pack="bi" name={s.icon} class=" h-5 w-5" />{' '}
              <span class="sr-only">{s.name}</span>{' '}
            </a>
          ) : (
            ''
          )
        )
      }
    </span>
  </div>
</footer>
