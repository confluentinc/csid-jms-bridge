<Configuration status="WARN">
  <Appenders>
    <RollingFile
      name="main"
      fileName="${jms-bridge.log.dir}/jms-bridge.log"
      append="true"
      filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">

      <PatternLayout>
        <Pattern>[%d] %p %m (%c:%L)%n</Pattern>
      </PatternLayout>
      <Policies>
        <SizeBasedTriggeringPolicy size="10 MB"/>
      </Policies>
      <DefaultRolloverStrategy max="5"/>
    </RollingFile>
  </Appenders>


  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="main"/>
    </Root>
  </Loggers>
</Configuration>
