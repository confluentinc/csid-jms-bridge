<Configuration status="INFO">
  <Appenders>
    <Console name="stdout" target="SYSTEM_OUT">
      <PatternLayout pattern="[%d] %p %m (%c:%L)%n"/>
    </Console>
  </Appenders>

  <Loggers>
    <Logger name="io.confluent.amq" level="TRACE" additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="org.apache.commons.beanutils" level="TRACE" additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="org.apache.activemq.artemis.core" level="INFO" additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <!-- Prevent kafka configuration from printing out all the time -->
    <Logger name="io.confluent.connect.avro.AvroConverterConfig" level="WARN" additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="io.confluent.connect.avro.AvroDataConfig" level="WARN" additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="io.confluent.kafka.serializers.KafkaAvroDeserializerConfig" level="WARN"
      additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="io.confluent.kafka.serializers.KafkaAvroSerializerConfig" level="WARN"
      additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="io.confluent.kafka.serializers.KafkaJsonDeserializerConfig" level="WARN"
      additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="io.confluent.kafka.serializers.KafkaJsonSerializerConfig" level="WARN"
      additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="io.confluent.kafka.serializers.json.KafkaJsonSchemaSerializerConfig" level="WARN"
      additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="io.confluent.kafka.serializers.json.KafkaJsonSchemaDeserializerConfig"
      level="WARN" additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="io.confluent.kafka.serializers.protobuf.KafkaProtobufSerializerConfig"
      level="WARN" additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="io.confluent.kafka.serializers.protobuf.KafkaProtobufDeserializerConfig"
      level="WARN" additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="kafka.server.KafkaConfig" level="WARN" additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="org.apache.kafka.clients.admin.AdminClientConfig" level="ERROR" additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="org.apache.kafka.clients.consumer.ConsumerConfig" level="ERROR" additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="org.apache.kafka.clients.producer.ProducerConfig" level="ERROR" additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="org.apache.kafka.connect.json.JsonConverterConfig" level="WARN"
      additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="io.confluent.connect.json.JsonSchemaConverterConfig" level="WARN"
      additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="io.confluent.connect.json.JsonSchemaDataConfig" level="WARN" additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="io.confluent.connect.protobuf.ProtobufDataConfig" level="WARN" additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Logger name="io.confluent.connect.protobuf.ProtobufConverterConfig" level="WARN"
      additivity="false">
      <AppenderRef ref="stdout"/>
    </Logger>

    <Root level="WARN">
      <AppenderRef ref="stdout"/>
    </Root>
  </Loggers>
</Configuration>
